<!-- 管理者側寺寺社詳細ページのコンテナ-->
<div class="container o-8column">
  <!--行を示す要素で、内部のコンテンツを行内に配置-->
  <div class="row">
    <!-- 'layouts/a_side' テンプレートを描画してサイドバーを表示 -->
    <!-- 左側のコラム (幅: 5カラム) -->
    <div class="col-md-4">
      <%= render 'layouts/a_side', q: @q %>
    </div>

    <!-- 右側のコラム (幅: 7カラム) -->
    <!--寺社詳細部分テンプレート呼び出し-->
    <div class="col-md-7 offset-lg-1">
      <%= render 'layouts/place_show', place: @place %>
      <h2 class="text-center mt-5 mb-5">御朱印一覧</h2>
      <!--ソート機能-->
      <div class="mb-3 text-center">
        <%= link_to '最新順', admin_place_path(sort_option: 'latest') %>&nbsp;|&nbsp;
        <%= link_to '古い順', admin_place_path(sort_option: 'old') %>&nbsp;|&nbsp;
        <%#= link_to '人気順', places_path(sort_option: 'goshuin_count') %>
      </div>
      <!--関連した寺社の御朱印一覧表示-->
      <%= render 'layouts/goshuin_index', goshuins: @goshuins %>
    </div>
  </div>
</div>
