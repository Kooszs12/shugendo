<!-- 管理者側寺社一覧ページのコンテナ -->
<div class="container o-8column">
  <!--行を示す要素で、内部のコンテンツを行内に配置-->
  <div class="row">

    <!--検索サイドバー-->
    <div class="col-md-5"> <!-- 左側のコラム (幅: 5カラム) -->
      <!-- 'layouts/a_side' テンプレートを描画してサイドバーを表示 -->
      <%= render 'layouts/a_side' %>
    </div>

    <!-- 寺社一覧表示 -->
    <div class="col-md-6 offset-lg-1"> <!-- 右側のコラム (幅: 7カラム) -->
      <h1>寺社一覧ページ</h1>
      <table class='table table-hover table-inverse'>
        <!-- テーブルの題名 -->
        <thead>
          <tr>
            <th></th>
            <th>寺社名</th>
            <th>住所</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <!-- テーブル内容表示 -->
        <tbody>
         <% @places.each do |place| %>
          <tr>
            <td>
              <%= link_to admin_place_path(place) do %>
                <%= image_tag place.get_place_image, alt: 'Place Image', width: 100, height: 100 %>
              <% end %>
            </td>
            <td><%= link_to place.name, admin_place_path(place) %></td>
            <td><%= place.prefecture.name %> <%= place.address %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>