<!-- ユーザー側寺寺社詳細ページのコンテナ-->
<div class="container o-8column">
  <!--行を示す要素で、内部のコンテンツを行内に配置-->
  <div class="row">
    <!-- 'layouts/a_side' テンプレートを描画してサイドバーを表示 -->
    <!-- 左側のコラム (幅: 5カラム) -->
    <div class="col-md-4">
      <%= render 'layouts/a_side' %>
    </div>

    <!-- 右側のコラム (幅: 7カラム) -->
    <!--寺社詳細部分テンプレート呼び出し-->
    <div class="col-md-7 offset-lg-1">
      <%= render 'layouts/place_show', place: @place %>

      <!-- 御朱印一覧表示 -->
      <h3 class = "text-center mt-3">御朱印一覧</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>御朱印画像</th>
            <th>メッセージ</th>
          </tr>
        </thead>
        <tbody>
          <% @goshuins.each do |goshuin| %>
            <tr>
              <td>
                <%= image_tag goshuin.get_goshuin_image, alt: 'Goshuin Image', width: 100, height: 100 %><br>
                <%= goshuin.user.nickname %>
              </td>
              <td><%= goshuin.message %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
