<% if user_signed_in? %>
  <h2 class="text-center">新規投稿</h2>
  <!--d-flexで設定、justify-content-around均等割-->
  <div class="d-flex justify-content-around">
    <%= link_to image_tag("place_new", size: "150x150"), new_place_path %>
    <%= link_to image_tag("godyuinn_new", size: "150x150"), new_goshuin_path %>
  </div>
<% end %>

<div class="sidebar">
  <div class="user-profile text-center">
    <h3 class="user-nickname"><%= user.nickname %></h3>
    <% if user.image.attached? %>
      <%= image_tag user.image, class: "profile-image img-fluid rounded-circle" %>
    <% else %>
      <%= image_tag "profile_no_image.png", class: "profile-image img-fluid rounded-circle" %>
    <% end %>
  </div>

  <!--自己紹介-->
  <div>
    <p>自己紹介</p>
    <%= user.introduction %>
  </div>

  <div>
  <!-- ユーザーがログインしている場合 -->
  <% if @user == current_user %>
    <p class="mt-3">めぇる: <%= user.email %></p>
    <p><%= link_to "参拝日記", goshuins_path, class: "edit-profile-link" %></p>
    <p><%= link_to "ゆぅざぁ編集", users_infomation_edit_path(user), class: "edit-profile-link" %></p>
    <p><%= link_to "退会", users_confirm_withdraw_path, class: "btn btn-secondary" %></p>
  <% else admin_signed_in? %>
    <p class="mt-3">めぇる: <%= user.email %></p>
    <p><%= link_to "ゆぅざぁ編集", edit_admin_user_path(user), class: "edit-profile-link" %></p>
    <p<%= link_to "退会", user_withdraw_path, method: :patch, :class => "btn btn-danger ms-3", data: { confirm: "本当に退会しますか？" }  %></p>
  <% end %>
  </div>
</div>
