<!--ユーザー詳細部分テンプレート-->
<!--ユーザーがログインしていた場合-->
<% if user_signed_in? %>
  <h2 class="text-center">新規投稿</h2>
  <!--d-flexで設定、justify-content-around均等割-->
  <div class="d-flex justify-content-around">
    <!--プロフィールアイコン-->
    <%= link_to image_tag("place_new.png", size: "150x150"), new_place_path %>
    <%= link_to image_tag("godyuinn_new.png", size: "150x150"), new_goshuin_path %>
  </div>
<% end %>

<div class="sidebar">
  <div class="user-profile text-center">
    <!--ニックネーム-->
    <h3 class="user-nickname"><%= user.nickname %></h3>
    <div class="w-100">
      <%= image_tag user.get_profile_image, class: "profile-image img-fluid profile-img rounded-circle" %>
    </div>
  </div>

  <div class="card-text text-right">
    <!-- 御朱印のいいね総数を表示 -->
    <p>いいね総数: ♡<%= total_likes %></p>
  </div>

  <!--自己紹介-->
  <div class="mt-5">
    <h5 class="text-center mb-3">
      <i class="fas fa-user-ninja"></i>
      自己紹介
    </h5>
    <!--自己紹介表示と自己紹介が空だった場合の表示-->
    <%= user.introduction.present? ? safe_join(user.introduction.split("\n"), tag(:br)) : "自己紹介はありません" %>
  </div>

  <div>
  <!-- ユーザーがログインしていて且つ本人だった場合 -->
  <% if @user == current_user %>
    <div class="text-center mt-5">
      <%= link_to goshuins_path, class: "btn btn-success w-50" do %>
        <i class="fas fa-shoe-prints"></i> 参拝日記
      <% end %>
    </div>

    <!--ゲストがログインしているか判断-->
    <% unless user.guest_user? %>
    <!--ユーザー編集-->
      <div class="text-center mt-5">
        <%= link_to users_infomation_edit_path, class: "btn btn-info w-50" do %>
          <i class="fas fa-pencil-alt"></i> ゆぅざぁ編集
        <% end %>
      </div>
    <% end %>
    <!--退会-->
    <div class="mt-5 text-center">
      <%= link_to users_confirm_withdraw_path, class: "btn btn-danger w-50" do %>
        <i class="fas fa-dizzy"></i> 退会
      <% end %>
    </div>

  <!--adminがログインしていた場合-->
  <% elsif admin_signed_in? %>
    <!--ユーザー編集-->
    <div class=" text-center mt-5">
      <%= link_to edit_admin_user_path(user), class: "btn btn-info w-50" do %>
        <i class="fas fa-pencil-alt"></i> ゆぅざぁ編集
      <% end %>
    </div>
    <!--退会-->
    <div class="mt-5 text-center">
      <%= link_to admin_user_path(id: user), method: :delete, class: "btn btn-danger w-50", data: {confirm: "退会させても良いですか？"} do %>
        <i class="fas fa-dizzy"></i> 退会
      <% end %>
    </div>
  <% end %>
  </div>
</div>
