<!-- マイページのコンテナ-->
<div class="container o-8column">
  <!--行を示す要素で、内部のコンテンツを行内に配置-->
  <div class="row">
    <!-- 'layouts/a_side' テンプレートを描画してサイドバーを表示 -->
    <!-- 左側のコラム (幅: 5カラム) -->
    <div class="col-md-4">
      <%= render 'user/users/b_side', user: @user, total_likes: @total_likes %>
    </div>

    <!-- 右側のコラム (幅: 7カラム) -->
    <!--カレントユーザーが投稿した御朱印一覧表示-->
    <div class="col-md-7 offset-lg-1">
      <!--present:御朱印が存在する場合-->
      <% if @goshuins.present? %>
        <h2 class="text-center mb-5">
          <%= @goshuins.first.user.nickname %>御朱印一覧
        </h2>

        <!--ソート機能-->
        <div class="mb-3 text-center">
          <%= link_to '新着順', users_mypage_path(sort_option: 'latest') %>&nbsp;|&nbsp;
          <%= link_to '古い順', users_mypage_path(sort_option: 'old') %>&nbsp;|&nbsp;
          <!--いいね数の多い順-->
          <%= link_to '人気順', users_mypage_path(sort_option: 'most_liked') %>
        </div>

          <!--御朱印一覧部分テンプレート呼び出し-->
        <%= render 'layouts/goshuin_index', goshuins: @goshuins %>
      <% end %>
    </div>
  </div>
</div>
