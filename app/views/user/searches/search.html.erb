<!--検索結果表示ページ-->
<div class="container o-8column">
  <!--行を示す要素で、内部のコンテンツを行内に配置-->
  <div class="row">
    <!-- 左側のコラム (幅: 5カラム) -->
    <div class="col-md-4">
      <!-- 'layouts/a_side' テンプレートを描画してサイドバーを表示 -->
      <%= render 'layouts/a_side', q: @q %>
    </div>
    <!-- 右側のコラム (幅: 7カラム) -->
    <div class="col-md-7 offset-lg-1">
      <div class="row">
        <div class="col-md-6">
        <% if @result == [] %>
          <h3 class="mt-3 text-center">検索結果がありません。</h3>
        <% elsif @places.present? %>
          <h2 class="mt-3">検索結果 "<%= @word %>"</h2>
          <div class="card-deck mt-3">
            <% @places.each do |f| %>
              <div class="card">
                <%= image_tag f.get_place_image, class: "card-img-top", alt: "Place Image" %>
                <div class="card-body">
                  <h5 class="card-title"><%= link_to f.name, place_path(f.id) %></h5>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <h3 class="mt-3 text-center">検索結果がありません。</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>