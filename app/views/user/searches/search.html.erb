<!--検索結果表示ページ-->
<div class="container o-8column">
  <!--行を示す要素で、内部のコンテンツを行内に配置-->
  <div class="row">
    <!-- 左側のコラム (幅: 5カラム) -->
    <div class="col-md-4">
      <!-- 'layouts/a_side' テンプレートを描画してサイドバーを表示 -->
      <%= render 'layouts/a_side' %>
    </div>
    <!-- 右側のコラム (幅: 7カラム) -->
    <div class="col-md-7 offset-lg-1">
      <table class="table border table-hover table-inverse">
        <% if @result == [] %>
          <h3 class="mt-3 text-center">検索結果がありません。</h3>
        <% elsif @places.present? %>
          <h2 class="mt-3">検索結果 "<%= @word %>"</h2>
          <thead>
            <tr>
              <th></th>
              <th>寺社名</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @places.each do |f| %>
              <td><%= image_tag f.get_place_image, size: "248x200", class: "image" %></td>
              <td><%= link_to f.name, place_path(f.id) %></td>
            </tr>
            <% end %>
          </tbody>
        <% else %>
          <h3 class="mt-3 text-center">検索結果がありません。</h3>
        <% end %>
      </table>
    </div>
  </div>
