<div class="container o-8column">
  <div class="row">

    <!-- サイドバー部分テンプレート -->
    <div class="col-md-4">
      <%= render 'layouts/a_side', q: @q %>
    </div>

    <!-- 御朱印一覧表示 -->
    <div class="col-md-7 offset-lg-1">
      <h2 class="text-center mb-5">新着御朱印</h2>
      <!--ソート機能-->
      <div class="mb-3 text-center">
        <%= link_to '最新順', root_path(sort_option: 'latest'), class: sort_change('latest') %>&nbsp;|&nbsp;
        <%= link_to '古い順', root_path(sort_option: 'old'), class: sort_change('old') %>&nbsp;|&nbsp;
        <!--いいね数の多い順-->
        <%= link_to '人気順', root_path(sort_option: 'most_liked'), class: sort_change('most_liked') %>
      </div>
      <!--全ての御朱印投稿呼び出し-->
      <%= render 'layouts/goshuin_index', goshuins: @goshuins %>
    </div>
  </div>
</div>