<!--JavaScriptのgoshuinを適用-->
<%#= javascript_pack_tag 'goshuin' %>
<%#= javascript_pack_tag 'goshuin_re' %>
<div class="container o-8column">
  <!--行を示す要素で、内部のコンテンツを行内に配置-->
  <div class="row">
    <!-- 左側のコラム (幅: 5カラム) -->
    <div class="col-md-4">
      <!-- 'layouts/a_side' テンプレートを描画してサイドバーを表示 -->
      <%= render 'layouts/a_side', q: @q %>
    </div>
    <!-- 右側のコラム (幅: 7カラム) -->
    <div class="col-md-7 offset-lg-1">
      <%= render 'layouts/goshuin_edit', goshuin: @goshuin,
                                         target_path: goshuin_path,
                                         title: "編集"%>
    </div>
  </div>
</div>