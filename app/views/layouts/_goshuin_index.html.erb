<!-- 御朱印一覧表示 -->
<h3 class = "text-center mt-3">御朱印一覧</h3>

<div class="mb-3">
  <div class="card-body">
    <% goshuins.each do |goshuin| %>
      <p class="card-text">
        <div class="d-flex justify-content-between">
          <div>
            <%= goshuin.user.nickname %><br>
            <%= goshuin.place.prefecture.name %>
          </div>
          <h5 class="card-title text-center">
            <%= link_to place_path(goshuin.place.id) do %>
              <%= goshuin.place.name %>
            <% end %>
            <% if admin_signed_in? %><!--adminがログインしていたら-->
              <%= link_to admin_place_path(goshuin.place.id) do %>
                <%= goshuin.place.name %>
              <% end %>
            <% end %>
          </h5>
          <div class="card-text">
            心付け：￥<%= goshuin.price %><br>
            参拝日：<%= goshuin.visit_day %>
          </div>
        </div>
      </p>
      <div class="card-img-bottom">
        <%= image_tag goshuin.get_goshuin_image, alt: 'Place Image', width: 100, height: 100 %>
      </div>
      <p class="card-text mb-5">
        <%= goshuin.message %>
      </p>
    <% end %>
  </div>
</div>

<!-- ページネーション -->
<div class="d-flex justify-content-center"> <!-- ページネーションを中央に配置するためのクラス -->
  <div class="pagination"> <!-- ページネーション -->
    <%= paginate goshuins %>
  </div>
</div>