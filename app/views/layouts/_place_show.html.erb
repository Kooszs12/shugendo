<!-- 寺社詳細ページの部分テンプレート -->
<!-- 保存されている寺社名を表示させている -->
 <h1 class="mb-5"><%= place.name %></h1>

<!--画像表示-->
<div class="text-center">
  <%= image_tag place.get_place_image, alt: 'Place Image', class: 'img-fluid' %>
</div>
<!--1段目のデータ表示-->
<div class="row mt-">
  <div class="col-md-4">
    <div>〒<%= place.postcode %></div>
  </div>
  <div class="col-md-8 text-right">
    <div>
      <!-- 表示させたいデータを連続で置くことで繋がって表示させることができる -->
      <%= place.prefecture.name %><%= place.address %>
    </div>
  </div>
</div>

<!--2段目-->
<div class="row">
  <div class="col-md-3">
    <div>☎︎ <%= place.phone_number %></div>
  </div>
  <div class="col-md-4 text-center">
    <div><strong>営業時間:</strong> <%= place.start_time.strftime('%H:%M') %>〜<%= place.end_time.strftime('%H:%M') %></div>
  </div>
  <div class="col-md-5 text-right">
    <div><strong>拝観料:¥</strong> <%= place.fee %></div>
  </div>
</div>

<!--３段目-->
<div class="row">
  <div class="col-md-6">
    <div><strong>御朱印種類:</strong> <%= place.goshuin_status_i18n %></div>
  </div>
  <div class="col-md-6">
    <div><strong>ぺっと状況:</strong> <%= place.pet_status_i18n %></div>
  </div>
</div>

<!--どっちがログインしているか判断-->
<div class="text-right">
  <% if user_signed_in? %><!--userがログインしていたら-->
    <%= link_to "編集", edit_place_path(place), class: "btn btn-sm btn-info w-25 mt-3" %>
  <% elsif admin_signed_in? %><!--adminがログインしていたら-->
    <%= link_to "編集", edit_admin_place_path(place), class: "btn btn-sm btn-info w-25 mt-1" %>
    <%= link_to "削除", admin_place_path(place), method: :delete, data: { confirm: "本当に削除してもいいですか?" }, class: "btn btn-sm btn-danger  w-50" %>
  <% end %>
</div>